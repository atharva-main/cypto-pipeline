{
  "dashboard": {
    "id": null,
    "title": "Crypto Trading Pipeline Dashboard",
    "tags": ["crypto", "trading", "real-time"],
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-30m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Live Price Updates",
        "type": "stat",
        "targets": [
          {
            "datasource": {
              "type": "postgres",
              "uid": "${DS_POSTGRESQL}"
            },
            "format": "table",
            "rawQuery": true,
            "rawSql": "SELECT symbol, current_price as \"Price\", volume_24h as \"24h Volume\" FROM latest_market_data ORDER BY symbol",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "color": { "mode": "thresholds" },
            "thresholds": { "steps": [{ "color": "green" }, { "color": "red", "value": 0 }] }
          }
        },
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"] },
          "colorMode": "value"
        }
      },
      {
        "id": 2,
        "title": "Price Trends (1-minute averages)",
        "type": "timeseries",
        "targets": [
          {
            "datasource": { "type": "postgres", "uid": "${DS_POSTGRESQL}" },
            "format": "time_series",
            "rawQuery": true,
            "rawSql": "SELECT window_start as time, symbol as metric, avg_price as value FROM processed_trades WHERE $__timeFilter(window_start) ORDER BY window_start",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "fieldConfig": { "defaults": { "unit": "currencyUSD" } },
        "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
      },
      {
        "id": 3,
        "title": "Trading Volume Trends",
        "type": "timeseries",
        "targets": [
          {
            "datasource": { "type": "postgres", "uid": "${DS_POSTGRESQL}" },
            "format": "time_series",
            "rawQuery": true,
            "rawSql": "SELECT window_start as time, symbol as metric, total_volume as value FROM processed_trades WHERE $__timeFilter(window_start) ORDER BY window_start",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "fieldConfig": { "defaults": { "unit": "short" } },
        "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
      },
      {
        "id": 4,
        "title": "Trade Count per Minute",
        "type": "stat",
        "targets": [
          {
            "datasource": { "type": "postgres", "uid": "${DS_POSTGRESQL}" },
            "format": "table",
            "rawQuery": true,
            "rawSql": "SELECT symbol, trade_count as \"Trades/Min\" FROM processed_trades WHERE window_start >= NOW() - INTERVAL '5 minutes' ORDER BY window_start DESC, trade_count DESC LIMIT 10",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "fieldConfig": { "defaults": { "unit": "short" } }
      },
      {
        "id": 5,
        "title": "Recent Trading Activity",
        "type": "table",
        "targets": [
          {
            "datasource": { "type": "postgres", "uid": "${DS_POSTGRESQL}" },
            "format": "table",
            "rawQuery": true,
            "rawSql": "SELECT symbol, price, quantity, trade_time FROM raw_trades WHERE trade_time >= NOW() - INTERVAL '10 minutes' ORDER BY trade_time DESC LIMIT 50",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "price" },
              "properties": [{ "id": "unit", "value": "currencyUSD" }]
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "VWAP Trend",
        "type": "timeseries",
        "targets": [
          {
            "datasource": { "type": "postgres", "uid": "${DS_POSTGRESQL}" },
            "format": "time_series",
            "rawQuery": true,
            "rawSql": "SELECT window_start as time, symbol as metric, vwap as value FROM processed_trades WHERE $__timeFilter(window_start) ORDER BY window_start",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "fieldConfig": { "defaults": { "unit": "currencyUSD" } }
      },
      {
        "id": 7,
        "title": "USD Volume Trend",
        "type": "timeseries",
        "targets": [
          {
            "datasource": { "type": "postgres", "uid": "${DS_POSTGRESQL}" },
            "format": "time_series",
            "rawQuery": true,
            "rawSql": "SELECT window_start as time, symbol as metric, total_volume_usd as value FROM processed_trades WHERE $__timeFilter(window_start) ORDER BY window_start",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
        "fieldConfig": { "defaults": { "unit": "currencyUSD" } }
      }
    ],
    "schemaVersion": 30,
    "version": 1
  }
}
